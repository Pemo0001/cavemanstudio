---
import "../global.css";

const { data } = Astro.props;
---

<a href={`${data.slug}`} data-type={data.type} class="cardWrapper">
  <article class="slider-item">
    <div class="img-div">
      <img src={data.image} alt="artwork" />
    </div>
    <h3>{data.name}</h3>
    <p>By {data.artist}</p>
  </article>
</a>

<style>
  .cardWrapper {
    text-decoration: none;
  }

  .slider-item {
    overflow: hidden;
    margin-right: 30px;
  }

  .img-div {
    width: 300px;
    height: 300px;
  }

  h3 {
    text-decoration: none;
    color: var(--secondary);
    font-size: 1.6rem;
    margin-top: 0.4rem;
  }

  p {
    color: var(--secondary);
    font-style: italic;
    font-weight: 700;
    line-height: 1;
  }
</style>
