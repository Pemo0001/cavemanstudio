<section class="letstalk">
  <h2>LET'S TALK</h2>
  <p>I would love to listen to your songs! If you are interested in working with me please write me an email. Looking forward to hearing from you.</p>
  <form action="/submit_contact_form" method="post" enctype="multipart/form-data">
    <div class="forminputs">
      <input type="text" id="name" name="name" placeholder="Name" required />
      <input type="email" id="email" name="email" placeholder="Email" required />
      <input type="tel" id="phone" name="phone" placeholder="Phone" required />
    </div>
    <div class="formgrid">
      <div class="formbottomleft">
        <textarea id="project" name="project" placeholder="Describe your project..." required></textarea>
      </div>
      <div class="formbottomright">
        <div class="space"></div>
        <input type="file" id="file" name="file" />
        <br />
        <button type="submit">Send</button>
      </div>
    </div>
  </form>

  <style>
    .letstalk {
      background-color: var(--secondary);
      padding: 3rem;
    }

    h2 {
      color: var(--primary);
      text-align: center;
    }

    p {
      max-width: 300px;
      margin: 0 auto;
      margin-bottom: 3rem;
    }

    input {
      background: none;
      border: none;
      border-bottom: 1px solid var(--primary);
      color: #fff;
      margin-bottom: 1rem;
    }

    form {
      border: 2px solid var(--primary);
      max-width: 1000px;
      padding: 2rem;
      margin: 0 auto;
    }

    .forminputs {
      text-align: center;
      margin-bottom: 2rem;
    }

    textarea {
      height: 300px;
      width: 100%;
      background: none;
      border: 1px solid var(--primary);
      color: #fff;
    }

    .formgrid {
      text-align: center;
    }

    #file {
      margin-top: 2rem;
    }

    input {
      margin-right: 2rem;
    }

    @media only screen and (min-width: 880px) {
      .formgrid {
        display: grid;
        grid-template-columns: 4fr 2fr;
        gap: 2rem;
      }

      .formbottomright {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 300px;
      }

      #file {
        margin-top: 8rem;
      }
    }
  </style>
</section>
