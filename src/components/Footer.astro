  <style>
    #footer-section {
      margin-top: 5rem;
    }
    #footer {
      margin: auto;
      padding: 3rem;
      background-color: var(--secondary);
    }
    #footer p {
      color: var(--primary);
    }
    #footer-p-bold {
      font-size: 20px;
      font-weight: 500;
    }
    #footer-p-light {
      font-size: 18px;
      font-weight: 300;
    }
    #footer-logo {
      float: right;
      height: 120px;
      width: 120px;
    }

    #footer-rights {
      font-size: 16px;
      margin: auto;
      margin-top: 5rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    #footer-icons svg {
      color: var(--primary);
      height: 60px;
      width: 60px;
      margin-top: 0.25rem;
      padding: 5px;
    }

    @media screen and (max-width: 880px) {
      #footer p {
        color: var(--primary);
      }
      #footer-p-bold {
        font-size: 16px;
        font-weight: 500;
      }
      #footer-p-light {
        font-size: 14px;
        font-weight: 300;
      }
      #footer-logo {
        float: right;
        height: 70px;
        width: 70px;
      }

      #footer-rights {
        font-size: 12px;
        margin: auto;
        margin-top: 5rem;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      #footer-icons svg {
        color: var(--primary);
        height: 40px;
        width: 40px;
        margin-top: 0.25rem;
        padding: 5px;
      }
    }
  </style>
</section>
