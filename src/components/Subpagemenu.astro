---
import Burgermenu from "./Burgermenu.astro";
---

<div class="globalmenu">
  <a href="/index.html"><img src="/logo.svg" /></a>
  <div class="logo">
    <a href="index.html"> <center>CAVEMAN STUDIO</center></a>
  </div>
  <Burgermenu />
</div>

<style>
  .globalmenu {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    height: 110px;
    background-color: var(--secondary);
    padding-left: 1.2rem;
  }

  img {
    width: 60px;
    padding-top: 15px;
  }

  .logo {
    padding-top: 25px;
  }

  .logo a {
    font-size: 1.5rem;
    font-family: "pulpo-rust-100", serif;
    font-weight: 400;
    font-style: normal;
    color: var(--primary);
    text-decoration: none;
  }

  @media only screen and (min-width: 700px) {
    .logo {
      padding-top: 35px;
    }
  }
</style>
