<div class="link">
  <div class="scroll-down-arrow"></div>
</div>

<script>
  document.querySelector(".link").addEventListener("click", function () {
    document.querySelector("#target-section").scrollIntoView({ behavior: "smooth" });
  });
</script>

<style>
  .link {
    width: 100%;
    height: 100px;
    position: absolute;
    bottom: 0;
    cursor: pointer;
  }
  .scroll-down-arrow {
    position: absolute;
    bottom: 70px;
    left: 48%;
    transform: translateX(-50%);
    cursor: pointer;
    display: block;
    width: 30px;
    height: 30px;
    border-bottom: 3px solid #ea8d55;
    border-right: 3px solid #ea8d55;
    transform: rotate(45deg);
    animation: arrow 1.3s infinite;
  }

  @keyframes arrow {
    0% {
      opacity: 0;
      transform: rotate(45deg) translate(-10px, -10px);
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      transform: rotate(45deg) translate(10px, 10px);
    }
  }
</style>
