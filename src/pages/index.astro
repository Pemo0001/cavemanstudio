---
import Layout from "../layouts/Layout.astro";
import Burgermenu from "../components/Burgermenu.astro";
import Slider from "../components/Slider.astro";
import Testimonials from "../components/Testimonials.astro";
import Footer from "../components/Footer.astro";
import NavUTF from "../components/Nav-UTF.astro";
import Newsletter from "../components/Newsletter.astro";
import Contactform from "../components/Contactform.astro";
import Thestudio from "../components/Thestudio.astro";
import Aboutlucas from "../components/Aboutlucas.astro";
import Scroll from "../components/Scroll.astro";
---

<Layout title="Caveman Studio">
  <a class="letstalklink" href="/letstalk.html">LET'S TALK!</a>
  <Burgermenu />
  <section class="frontpage">
    <div class="frontpagecontent">
      <a href="index.html">
        <img src="logo.svg" class="logo" />
        <h1>CAVEMAN STUDIO</h1>
      </a>
      <h2 class="keywords">
        <span class="raw">raw</span>
        <span class="analog"> analog </span>
        <span class="organic"> organic </span>
      </h2>
    </div>
    <Scroll />
  </section>
  <div class="circleflex">
    <div class="circleleft"></div>
    <div class="circleright"></div>
  </div>
  <section class="recentprojects">
    <div id="target-section"></div>
    <h2 class="recentprojectstitle">Recent projects</h2>
    <Slider />
    <center>
      <iframe class="spotifyplaylist" style="border-radius:12px" src="https://open.spotify.com/embed/playlist/37i9dQZF1E4xGMxzRKGeCj?utm_source=generator&theme=0" width="75%" height="500" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </center>
  </section>
  <div class="circleflex">
    <div class="circleleft2"></div>
    <div class="circleright2"></div>
  </div>
  <Testimonials />
  <div class="circleflex">
    <div class="circleleft"></div>
    <div class="circleright"></div>
  </div>
  <Thestudio />
  <div class="circleflex">
    <div class="circleleft2"></div>
    <div class="circleright2"></div>
  </div>
  <Newsletter />
  <div class="circleflex">
    <div class="circleleft"></div>
    <div class="circleright"></div>
  </div>
  <Aboutlucas />
  <div class="circleflex">
    <div class="circleleft2"></div>
    <div class="circleright2"></div>
  </div>
  <Contactform />
  <Footer />
</Layout>
